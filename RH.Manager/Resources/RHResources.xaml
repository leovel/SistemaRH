    <Style x:Key="CustomTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="BorderBrush" Value="{x:Null}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="FontFamily" Value="{theme:CRMThemeResource Resource=FontFamily}" />
        <Setter Property="Foreground" Value="{theme:CRMThemeResource Resource=Foreground}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize}" />
        <Setter Property="Margin" Value="6 8" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid x:Name="RootElement" UseLayoutRounding="True">
                        <ScrollViewer  x:Name="PART_ContentHost" 
                                       Padding="{TemplateBinding Padding}"
                                       Foreground="{TemplateBinding Foreground}" 
                                       Background="{x:Null}"
                                       BorderBrush="{x:Null}"
                                       BorderThickness="0"
                                       Margin="0" 
                                       VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
