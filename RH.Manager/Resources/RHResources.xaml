            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="text" Property="TextElement.Foreground" Value="{theme:CRMThemeResource Resource=AccentBrush}" />
                <Setter TargetName="text" Property="Opacity" Value="1" />
